n=input('Enter a String:')
lettercount=0
digitcount=0
spacecount=0
specialcharcount=0
for i in n:
    print(i,end='')
    if n.isalpha()==True:
        lettercount+=1
    elif n.isdigit()==True:
        digitcount()+=1
    elif n.isspace()==True:
        spacecount+=1
    else:
        specialcharcount+=1
if lettercount!=0:
    print('Letter Count:', lettercount)
elif digitcount!=0:
    print('Digit Count:', digitcount)
elif spacecount!=0:
    print('Space Count:', spacecount)
elif specialcharcount!=0:
    print('Special Character Count:', specialcharcount)
else:
    print('ERROR!')
